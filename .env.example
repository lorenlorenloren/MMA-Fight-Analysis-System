# MMA Fight Analysis System - Environment Variables

# Model Paths
YOLO_DETECTION_MODEL=models/yolov8x.pt
YOLO_POSE_MODEL=models/yolov8x-pose.pt
ACTION_RECOGNITION_MODEL=models/action_recognition.pth

# Device Configuration
DEVICE=cuda  # cuda or cpu
USE_FP16=true  # Mixed precision
BATCH_SIZE=1
NUM_WORKERS=4

# Video Processing
TARGET_FPS=30
TARGET_RESOLUTION_W=1920
TARGET_RESOLUTION_H=1080

# Paths
DATA_DIR=data/
RAW_DATA_DIR=data/raw/
PROCESSED_DATA_DIR=data/processed/
CACHE_DIR=data/cache/
OUTPUT_DIR=results/
LOG_DIR=logs/

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Visualization
SAVE_ANNOTATED_VIDEO=true
SAVE_HEATMAP=true
SAVE_MINIMAP=true

# Optional: API Keys for cloud services
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# WANDB_API_KEY=
